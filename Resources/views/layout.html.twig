{# Resources/views/layout.html.twig #}
{% extends "@Bootstrap/layout.html.twig" %}

{% block bootstrapFormTheme %}
    {% block adminBSBFormTheme %}
        {% if (form is defined) %}
            {% form_theme form "@AdminBSB/layout/Form/adminbsb_layout.html.twig" %}
        {% endif %}
    {% endblock %}
{% endblock %}

{% block bootstrapStylesheets %}
    {{ parent() }}
    {% block adminBSBStylesheets %}
        <!-- Google fonts -->
        <link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700&amp;subset=latin,cyrillic-ext">
        <link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        {% include "@AdminBSB/layout/stylesheets.html.twig" with {"theme": "bootstrap" } %}
    {% endblock %}
{% endblock %}

{% block bootstrapTitle %}{% block adminBSBTitle %}{% endblock %}{% endblock %}

{% block bootstrapAttributes %}{% block adminBSBAttributes %}{% endblock %}{% endblock %}

{% block bootstrapContainer %}
    {% block adminBSBContainer %}
    {% endblock %}
{% endblock %}

{% block bootstrapJavascripts %}
    {{ parent() }}
    {% block adminBSBJavascripts %}
        {% include "@AdminBSB/layout/javascripts.html.twig" with {"theme": "bootstrap" } %}
    {% endblock %}
{% endblock %}
