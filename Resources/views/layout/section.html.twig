{# Resources/views/layout/section.html.twig #}
{% extends "@AdminBSB/layout.html.twig" %}
{% block adminBSBHeadTitle %}{{ ApplicationProvider.title|default("AdminBSB Material Design") }}{% endblock %}
{% block adminBSBBodyClasses %}theme-red{% endblock %}
{% block adminBSBBodyContent %}
    {{ parent() }}
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>{{ "views.layout.loader.wait"|trans({}, "AdminBSBBundle") }}</p>
        </div>
    </div>
    <div class="overlay"></div>
    <div class="search-bar">
        <div class="search-icon">
            <i class="material-icons">search</i>
        </div>
        <input type="text" placeholder="{{ "views.layout.search"|trans({}, "AdminBSBBundle")|upper }}">
        <div class="close-search">
            <i class="material-icons">close</i>
        </div>
    </div>
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-toggle collapsed" href="javascript:void(0);" aria-expanded="false" data-target="#navbar-collapse" data-toggle="collapse"></a>
                <a class="bars" href="javascript:void(0);"></a>
                <a class="navbar-brand" href="javscript:void(0)">{{ ApplicationProvider.name|default("")|raw }}</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                </ul>
            </div>
        </div>
    </nav>
    <section>
        <aside class="sidebar" id="leftsidebar">
            <div class="user-info">
                <div class="image">
                    <img src="{{ asset("bundles/adminbsb/images/user.png") }}" height="48" width="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-expanded="false" aria-haspopup="true">{{ user.username|default("username") }}</div>
                    <div class="email">{{ user.email|default("email") }}</div>
                    <div class="btn-group user-helper-dropdown">
                        <i class="material-icons" data-toggle="dropdown" aria-expanded="true" aria-haspopup="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);"><i class="material-icons">person</i>{{ "views.html.user_info.profil"|trans({}, "AdminBSBBundle") }}</a></li>
                            <li class="divider" role="seperator"></li>
                            <li><a href="javascript:void(0);"><i class="material-icons">input</i>{{ "layout.logout"|trans({}, "FOSUserBundle") }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="menu">
                <ul class="list">
                    {{ adminBSBMultiLevelMenu(NavigationProvider.tree) }}
                </ul>
            </div>
            <div class="legal">
                <div class="copyright">
                    &copy; {{ ApplicationProvider.year|default("2018")|raw }} <a href="{{ path(ApplicationProvider.route|default("/")) }}">{{ ApplicationProvider.name|default("")|raw }}</a>.
                </div>
                <div class="version">
                    <b>Version : </b>{{ ApplicationProvider.version|default("1.0.0") }}
                </div>
            </div>
        </aside>
        <aside class="right-sidebar" id="rightsidebar">

        </aside>
    </section>
    <section class="content">
        <div class="container-fluid">
            {% block adminBSBBodySection %}
            {% endblock %}
            <div class="row clearfix" id="twig-console">
                <div class="{{ bootstrapGrid({'lg': 12}) }}">
                    <div class="card">
                        <div class="header bg-black">
                            <h2>TWIG CONSOLE</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="body bg-grey" id="twig-context" style="display:none;">
                            {{ dump(_context) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block adminBSBBodyScripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('div#twig-console div.header a').on('click', function () {
                var $twigContexte = $('div#twig-context');
                var displayProperty = 'none';
                if ('none' === $twigContexte.css('display')) {
                    displayProperty = 'block';
                }
                $twigContexte.css('display', displayProperty);
            });
        });
    </script>
{% endblock %}